<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <androidx.cardview.widget.CardView
        android:id="@+id/animalView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/animalImg1"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:padding="8dp"
                app:srcCompat="@drawable/catimage1" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/animalName1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kitty"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/animalDesc1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This text matches description for Kitty"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </LinearLayout>

            <Button
                android:id="@+id/animalDetails1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#800080"
                android:clickable="true"
                android:text="DETAILS"
                android:onClick="onButtonClick"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/animaImg2"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:padding="8dp"
                app:srcCompat="@drawable/catimage2" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/animalName2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Clawy"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/animalDesc2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This text matches description for Kitty"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </LinearLayout>

            <Button
                android:id="@+id/animalDetails2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#800080"
                android:clickable="true"
                android:onClick="onButtonClick"
                android:text="DETAILS"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/animalImg3"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:padding="8dp"
                app:srcCompat="@drawable/catimage3" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/animalName3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bitty"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/animalDesc3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This text matches description for Kitty"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </LinearLayout>

            <Button
                android:id="@+id/animalDetails3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#800080"
                android:clickable="true"
                android:cursorVisible="true"
                android:onClick="onButtonClick"
                android:text="DETAILS"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>